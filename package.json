{
  "name": "kanban-board-viewer",
  "displayName": "Kanban Board Viewer",
  "description": "View and edit Kanbn markdown boards in a dedicated webview.",
  "version": "0.1.4",
  "publisher": "local",
  "repository": {
    "type": "git",
    "url": "https://github.com/interconnectedMe/kanban-board-viewer.git"
  },
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "kanbanBoardViewer.openBoard",
        "title": "Kanban Board Viewer: Open Board"
      },
      {
        "command": "kanbanBoardViewer.openExternal",
        "title": "Kanban Board Viewer: Open In Browser (Antigravity Workaround)"
      },
      {
        "command": "kanbanBoardViewer.openDiagnostics",
        "title": "Kanban Board Viewer: Diagnostics"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package --no-dependencies",
    "lint": "echo \"No lint configured\""
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.86.0",
    "typescript": "^5.3.3",
    "@vscode/vsce": "^3.7.1"
  }
}
